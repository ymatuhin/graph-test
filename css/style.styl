/*=================================
=            Variables            =
=================================*/

pageBg  = #f9f8f7
textClr = #000
linkD   = #08c
linkH   = darken(linkD, 15%)
linkV   = #0000aa
linkA   = #dd0000
baseFF  = Arial, Tahoma, Verdana, sans-serif



/*===============================
=            Imports            =
===============================*/

@import "stylus/mixins"
@import "stylus/helpers"

// @import "stylus/typografy"
